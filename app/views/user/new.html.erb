<% unless @user.errors.full_messages.empty? %>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user, url: user_new_path() do |f| %>
<div class="new_user_container">
  <div class="row"></div>
  <div class="row"></div>
  <div class="row"></div>
  <div class="row"></div>
  <div class="row">
    <div class="col s12 m2 center-align"><%= f.label :email %></div>
    <div class="col s12 m8"><%= f.email_field :email, :require => false %></div>
    <div class="col s12 m2"></div>
  </div>
  <div class="row">
    <div class="col s12 m2 center-align"><%= f.label :password %></div>
    <div class="col s12 m8"><%= f.password_field :password , :require => true %></div>
    <div class="col s12 m2"></div>
  </div>
  <div class="row">
    <div class="col s12 m2 center-align"><%= f.label :password_confirmation %></div>
    <div class="col s12 m8"><%= f.password_field :password_confirmation,  :require => true %></div>
    <div class="col s12 m2"></div>
  </div>
  <div class="row">
    <div class="col s12 m2 center-align"><%= f.label :first_name %></div>
    <div class="col s12 m8"><%= f.text_field :first_name %></div>
    <div class="col s12 m2"></div>
  </div>
  <div class="row">
    <div class="col s12 m2 center-align"><%= f.label :last_name %></div>
    <div class="col s12 m8"><%= f.text_field :last_name %></div>
    <div class="col s12 m2"></div>
  </div>
  <div class="row">
    <div class="col s12 m2 center-align"><%= f.label :phone %></div>
    <div class="col s12 m8"><%= f.telephone_field :phone, :require => true %></div>
    <div class="col s12 m2"></div>
  </div>
  <div class="row">
    <div class="col s12 m2 center-align"><%= f.label :github %></div>
    <div class="col s12 m8"><%= f.url_field :github, :require => true %></div>
    <div class="col s12 m2"></div>
  </div>
  <div class="row">
    <div class="col s12 m4"></div>
    <div class="col s12 m2 center-align"><%= f.submit "Sign Up" , :class =>"waves-effect waves-light btn" %></div>
    <div class="col s12 m2"><%= f.submit "Cancel" , :class =>"waves-effect waves-light btn" %></div>
    <div class="col s12 m4"></div>
  </div>
</div>
<% end %>
