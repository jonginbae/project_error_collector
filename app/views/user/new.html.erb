<% unless @user.errors.full_messages.empty? %>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user , url: user_new_path() do |f| %>
<p>
  <%= f.label :email %>
  <%= f.email_field :email,  :require => true %>
</p>
<p>
  <%= f.label :password %>
  <%= f.password_field :password , :require => true %>
</p>
<p>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation,  :require => true %>
</p>
<p>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
</p>
<p>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
</p>
<p>
  <%= f.label :phone %>
  <%= f.telephone_field :phone, :require => true %>
</p>
<p>
  <%= f.label :github %>
  <%= f.url_field :github, :require => true %>
</p>
<%= f.submit "Sign up" %>
<%= f.submit "Cancel" %>
<% end %>
